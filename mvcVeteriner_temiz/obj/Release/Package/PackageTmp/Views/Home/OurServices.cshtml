                            </div>
                            <div class="tagline_right"><a href="~/VeterinerImages/@item.ImagePath" data-gal="prettyPhoto" title="@item.Title"><img src="~/VeterinerImages/@item.ImagePath" alt=""></a></div>

                            <div class="clear"></div>
                        </div>
                   
                }
       
    </div>

