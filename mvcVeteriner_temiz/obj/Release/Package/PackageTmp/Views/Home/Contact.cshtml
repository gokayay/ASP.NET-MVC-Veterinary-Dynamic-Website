        </div>

        <br />
        <div id="breadcrumb">

            <div class="subnav">
                <h4 style="font-size:25px"><strong>İletişim Bilgileri</strong></h4>
                <br />
                <p><strong>Telefon:</strong> 0212 550 5838</p>
                <hr />
                <p><strong>Cep Telefonu:</strong> 0536 546 2237</p>
                <hr />
                <p><strong>Adres:</strong>  Bağlar Mahallesi Atatürk Caddesi No:44/B Güneşli/İstanbul</p>

            </div>
        </div>
        <br />
        @using (Html.BeginForm(null, null, FormMethod.Post, new { id = "contact-form", action = "/iletisim" }))
        {
            if (ViewBag.Success != null && ViewBag.Success)
            {
                <div id="wrapper">
                    <div id="message-sent">
                        <span class="mesajbasari"> Mesajınız başarıyla gönderilmiştir.</span>
                    </div>
                </div>
            }
        }



        <div class="contact"><br />
            <h1>BİZİMLE İLETİŞİME GEÇİN</h1><br />
            <form action="#" method="post">
                <noscript>
                    <p><input type="hidden" name="nojs" id="nojs"></p>
                </noscript>


                <br><p><label for="name"><small>İsim (gerekli)</small></label>
                    <input type="text" name="Name" id="name" value="" size="22">
                </p>
                <p><label for="email"><small>E-Posta (gerekli)</small></label>
                    <input type="text" name="Email" id="email" value="" size="22">
                </p>
                <p><label for="phone"><small>Telefon </small></label>
                    <input type="text" name="Phone" id="phone" value="" size="22">
                </p>
                <p><label for="comments"><small>Mesajınız (gerekli)</small></label>
                    <textarea name="Message" id="comments" rows="10"></textarea>
                </p>
                <p>
                    <input name="reset" type="reset" id="reset" value="Sıfırla">
                    
                    <input name="submit" type="submit" id="submit" value="Gönder">
                </p>
            </form>

        </div>

        <br />

